<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:id="@+id/batsman_layout">

    <com.banglacricket.bdcricketteam.util.CircleImageView
        android:id="@+id/civ_player_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/default_image"
        android:layout_margin="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/batsmanScoredetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/batsmenName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Batsman Name"
                android:textColor="@color/cpb_blue" />

            <TextView
                android:id="@+id/runs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:textSize="12sp"
                android:textColor="@color/Black"
                android:gravity="center_horizontal"
                android:text="Runs" />

            <TextView
                android:id="@+id/balls"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:textSize="12sp"
                android:textColor="@color/Black"
                android:gravity="center_horizontal"
                android:text="Balls" />

            <TextView
                android:id="@+id/fours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textSize="12sp"
                android:textColor="@color/Black"
                android:gravity="center_horizontal"
                android:text="Fours" />

            <TextView
                android:id="@+id/six"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textSize="12sp"
                android:textColor="@color/Black"
                android:gravity="center_horizontal"
                android:text="Sixes" />

            <TextView
                android:id="@+id/sr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:textSize="12sp"
                android:textColor="@color/Black"
                android:gravity="center_horizontal"
                android:text="SR" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/desc_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Out description"
                android:textColor="@color/OliveDrab"
                android:textSize="10dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>