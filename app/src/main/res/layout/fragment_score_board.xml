<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:fillViewport="true"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/pagebackground">

        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:gravity="center"
                android:id="@+id/labelTournament"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:text="tournament"
                android:textColor="#000000"
                android:textSize="18sp" />



            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/labelGround"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:text="ground"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/labelInfo"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:text="info"
                android:textColor="#000000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/labelTeam1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:text="team1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="19sp" />

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/labelTeam2"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:text="team2"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="19sp" />
            </LinearLayout>

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/labelMatchStatus"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:text="match status"
                android:textColor="@color/Green"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstinningscontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_first_inns"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1st"/>

                <Button
                    android:id="@+id/btn_second_inns"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2nd"/>

                <Button
                    android:id="@+id/btn_third_inns"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3rd"/>

                <Button
                    android:id="@+id/btn_fourth_inns"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4th"/>
            </LinearLayout>

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/labelFirstInnings"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="First Innings"
                android:textColor="#000000"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_dark"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="@color/CornflowerBlue">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:text="Player"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:text="Run"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:text="Ball"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:text="4S"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:text="6S"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:text="SR"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_dark"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/lvBattingInnings1"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_dark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:text="Extras"/>
                <TextView
                    android:id="@+id/innings1extra"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/Black"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_dark"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <TextView
                    android:text="Total"
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/innings1total"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_dark"/>

            <TextView
                android:id="@+id/innings1fow"
                android:text="Fall of wickets"
                android:textColor="@color/Black"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_dark"/>

            <TextView
                android:id="@+id/innings1DNB"
                android:text="DNB"
                android:textColor="@color/Black"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_dark"/>


            <LinearLayout
                android:background="@color/CornflowerBlue"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:text="Player"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:text="Over"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:text="Maiden"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:text="Run"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:text="Wicket"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_dark"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/lvBowlingInnings1"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_dark"/>


        </LinearLayout>

    </LinearLayout>
</ScrollView>