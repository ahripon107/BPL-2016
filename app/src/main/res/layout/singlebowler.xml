<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/batsmanScoredetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.banglacricket.bdcricketteam.util.CircleImageView
            android:id="@+id/civ_player_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/default_image"
            android:layout_margin="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/bowl_Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Bowler Name"
                android:paddingLeft="3dp"
                android:textColor="@color/cpb_blue" />

            <TextView
                android:id="@+id/bowl_overs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Overs"
                android:gravity="center_horizontal"
                android:textColor="@color/Black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/bowl_maiden"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Mdns"
                android:gravity="center_horizontal"
                android:textColor="@color/Black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/bowl_runs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:textColor="@color/Black"
                android:text="Runs"
                android:gravity="center_horizontal"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/bowl_wickets"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Wkts"
                android:gravity="center_horizontal"
                android:textColor="@color/Black"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>