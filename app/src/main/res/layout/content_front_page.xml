<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_front_page"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pagebackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.allgames.sportslab.activity.FrontPage"
    tools:showIn="@layout/app_bar_front_page">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_welcome_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:text="Hello viewers !!"
                android:textColor="@color/Black"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/tour_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/default_image"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_empty_view"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="@color/Black"
                android:text="No live natches ongoing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/live_matches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewFontPage"
        ads:adSize="BANNER"
        ads:adUnitId="@string/frontpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
